<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F3F4F6"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bộ lọc tìm kiếm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/btn_reset_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lại"
            android:textColor="@color/blue"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh mục"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Di tích lịch sử"
            android:contentDescription="historical"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ẩm thực"
            android:contentDescription="food"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui chơi giải trí"
            android:contentDescription="entertainment"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiên nhiên"
            android:contentDescription="nature"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôn giáo"
            android:contentDescription="religious"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua sắm"
            android:contentDescription="shopping"
            app:chipStrokeColor="@color/blue"
            app:chipStrokeWidth="1dp"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khu vực"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_province"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Chọn Tỉnh/Thành phố"
        app:boxStrokeColor="@color/blue"
        app:hintTextColor="@color/blue"
        android:layout_marginBottom="12dp"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/blue">

        <AutoCompleteTextView
            android:id="@+id/actv_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/shape_rounded_corners_8dp"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_district"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Chọn Quận/Huyện"
        android:enabled="false"
        app:boxStrokeColor="@color/blue"
        app:hintTextColor="@color/blue"
        android:layout_marginBottom="24dp"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/blue">
        <AutoCompleteTextView
            android:id="@+id/actv_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/shape_rounded_corners_8dp"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Áp dụng bộ lọc"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue"
        app:cornerRadius="8dp"/>

</LinearLayout>