<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.journey.JourneyFragment">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:elevation="25dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:paddingVertical="24dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageBack"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_back"
                            android:scaleType="fitXY"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Hành Trình"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageAvatar"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="12dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/textName"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="14dp"
                                android:layout_marginStart="1dp"
                                android:layout_marginEnd="54dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Nguyễn Minh Hoàng"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imageRank"
                                    android:layout_width="14dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="9dp"
                                    android:src="@drawable/ic_journey_rankmaster"
                                    android:scaleType="fitXY"
                                    />
                                <TextView
                                    android:id="@+id/textRank"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="33dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Rank cao thủ"
                                    />
                                <TextView
                                    android:id="@+id/textPoint"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Điểm du lịch: 500"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/child_fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="39dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/myEvaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="17dp"
                                android:src="@drawable/ic_journey_myevaluation"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Đánh giá của tôi"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_journey_arrow"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/favoriteLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginEnd="17dp"
                                    android:src="@drawable/ic_journey_favoritelocation"
                                    android:scaleType="fitXY"
                                    />
                            <TextView
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Địa điểm yêu thích"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_journey_arrow"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/historyJourney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginEnd="17dp"
                                android:src="@drawable/ic_journey_historyjourney"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Lịch sử hành trình"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_journey_arrow"                                android:scaleType="fitXY"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>